{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "outDir": "./dist/",
    "jsx": "react",
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "pretty": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2015.promise"
    ],
    "rootDirs": [
      "./"
    ],
    "types": [
    ],
    "baseUrl": ".",
    "paths": {
      "img/*": ["src/home/imgs/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}